\expandafter\def\csname PolP#1\endcsname{{\ensuremath{P_{\!T}^{{\mathnormal{#2}}_{\scriptscriptstyle #3}^{\scriptscriptstyle #4}}}}}
\expandafter\def\csname PolP#1bar\endcsname{{\ensuremath{P_{\!T}^{{\antibar{\mathnormal{#2}}}_{\scriptscriptstyle #3}^{\scriptscriptstyle #4}}}}}
\expandafter\def\csname PolyP#1\endcsname{{\ensuremath{P_{\!y}^{{\mathnormal{#2}}_{\scriptscriptstyle #3}^{\scriptscriptstyle #4}}}}}
\expandafter\def\csname PolyP#1bar\endcsname{{\ensuremath{P_{\!y}^{{\antibar{\mathnormal{#2}}}_{\scriptscriptstyle #3}^{\scriptscriptstyle #4}}}}}
}
\newcommand{\polarizationmzp}[3]{
  \genpolarization{#1p}{#2}{#3}{+}
  \genpolarization{#1m}{#2}{#3}{-}
  \genpolarization{#1z}{#2}{#3}{0}
}
\genpolarization{H}{H}{}{}
\genpolarization{L}{\Lambda}{}{}
\polarizationmzp{K}{K}{}
\polarizationmzp{S}{\Sigma}{}
\genpolarization{X}{\Xi}{}{}
\polarizationmzp{X}{\Xi}{}
\genpolarization{O}{\Omega}{}{-}


