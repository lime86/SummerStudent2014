\newdimen\lmr@ht\newdimen\lmr@dp\newdimen\lmr@ght\newdimen\lmr@gdp
\def\lmrb@xdim#1#2{\setbox\z@\hbox{$\m@th#1{#2}$}\global\lmr@ght\ht\z@\global\lmr@gdp\dp\z@}
\def\lmrb@xbrk#1#2{\hbox{$\m@th#1\left#2\setbox\z@\hbox{}\dp\z@\lmr@dp\ht\z@\lmr@ht\box\z@\right.\n@space$}}
\newcommand{\lmr}[1]{{%
\def\leftd##1{}\def\midd##1{}\def\rightd##1{}\def\middo##1{}%
\expandafter\mathpalette\expandafter\lmrb@xdim{#1}\lmr@ht\lmr@ght\lmr@dp\lmr@gdp%
\def\lmr@d##1{{\expandafter\mathpalette\expandafter\lmrb@xbrk{##1}}}%
\def\leftd{\mathopen\lmr@d}\def\midd{\mathrel\lmr@d}\def\middo{\mathord\lmr@d}\def\rightd{\mathclose\lmr@d}%
#1}}
\newdimen\tmpf@ntsize
\def\br@cksize#1#2#3{\hbox{$\m@th#1\left#2\vbox to #3\tmpf@ntsize{}\right.\n@space$}}
\def\bracksize#1#2{{\mathchoice%
{\tmpf@ntsize\tf@size pt\br@cksize{\displaystyle}{#1}{#2}}%
{\tmpf@ntsize\tf@size pt\br@cksize{\textstyle}{#1}{#2}}%
{\tmpf@ntsize\sf@size pt\br@cksize{\scriptstyle}{#1}{#2}}%
{\tmpf@ntsize\ssf@size pt\br@cksize{\scriptscriptstyle}{#1}{#2}}}}
\def\normdel#1{{\bracksize#1{0}}}
\def\big#1{{\bracksize#1{0.85}}}
\def\Big#1{{\bracksize#1{1.15}}}
\def\bigg#1{{\bracksize#1{1.45}}}
\def\Bigg#1{{\bracksize#1{1.75}}}
\def\norml{\mathopen\normdel}
\def\normm{\mathrel\normdel}
\def\normr{\mathclose\normdel}
\def\normmo{\mathord\normdel}
\def\bigmo{\mathord\big}
\def\Bigmo{\mathord\Big}
\def\biggmo{\mathord\bigg}
\def\Biggmo{\mathord\Bigg}
\newcommand{\newbrackets}[3]{
\expandafter\def\csname #1\endcsname##1{{\norml#2{##1}\normr#3}}
\expandafter\def\csname lr#1\endcsname##1{{\left#2{##1}\right#3}}
\expandafter\def\csname big#1\endcsname##1{{\bigl#2{##1}\bigr#3}}
\expandafter\def\csname bigg#1\endcsname##1{{\biggl#2{##1}\biggr#3}}
\expandafter\def\csname Big#1\endcsname##1{{\Bigl#2{##1}\Bigr#3}}
\expandafter\def\csname Bigg#1\endcsname##1{{\Biggl#2{##1}\Biggr#3}}}
\newcommand{\newbinbrackets}[4]{
\expandafter\def\csname #1\endcsname##1##2{{\norml#2{##1}\normmo#3{##2}\normr#4}}
\expandafter\def\csname lr#1\endcsname##1##2{{\lmr{\leftd#2{##1}\middo#3{##2}\rightd#4}}}
\expandafter\def\csname big#1\endcsname##1##2{{\bigl#2{##1}\bigmo#3{##2}\bigr#4}}
\expandafter\def\csname bigg#1\endcsname##1##2{{\biggl#2{##1}\biggmo#3{##2}\biggr#4}}
\expandafter\def\csname Big#1\endcsname##1##2{{\Bigl#2{##1}\Bigmo#3{##2}\Bigr#4}}
\expandafter\def\csname Bigg#1\endcsname##1##2{{\Biggl#2{##1}\Biggmo#3{##2}\Biggr#4}}}
\newcommand{\newtribrackets}[5]{
\expandafter\def\csname #1\endcsname##1##2##3{{\norml#2{##1}\normmo#3{##2}\normmo#4{##3}\normr#5}}
